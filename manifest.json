{
  "manifest_version": 2,

  "name": "Toolbar Timer",

  "version": "1.0.0",

  "description": "Insert a timer at the upper-right corner of your browser window right now!",

  "browser_action": {
    "default_title": "Toolbar Timer",
    "default_popup": "popup/popup.html",
    "default_icon": "icon.png"
  },

  "permissions": 
  [
    "debugger"
  ],

   "content_security_policy": "script-src 'self' https://code.jquery.com/jquery-3.1.0.min.js; object-src 'self'"
}