{
  "manifest_version": 2,

  "name": "Toolbar Timer",

  "version": "1.0",

  "description": "A timer that you can use when you are taking a practice exam",

  "background": {
       "scripts": ["background.js"],
       "persistent": false
  },

  "browser_action": {
    "default_title": "Toolbar Timer",
    "default_popup": "popup/popup.html",
    "default_icon": "icon.png"
  },

  "permissions": 
  [
    "debugger",
    "alarms",
    "notifications",
    "storage"
  ],

   "content_security_policy": "script-src 'self' https://code.jquery.com/jquery-3.1.0.min.js; object-src 'self'"
}